{
  "name": "capstone-backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "repository": "https://github.com/capstone-2021-1/capstone-backend.git",
  "author": "sindy",
  "license": "GPL-3.0-only",
  "engines": {
    "node": ">=14.16.0"
  },
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "rimraf dist && tsc && copyfiles --up 1 src/graphql/**/*.graphql dist/",
    "start": "node dist/index.js",
    "format": "prettier . --write --ignore-path .gitignore",
    "lint": "eslint . --fix --ignore-path .gitignore",
    "type": "tsc --pretty --noEmit",
    "pre-push": "yarn format && yarn lint && yarn type",
    "generate": "graphql-codegen --config codegen.yml",
    "prepare": "husky install"
  },
  "dependencies": {
    "@graphql-tools/load-files": "^6.3.1",
    "@graphql-tools/merge": "^6.2.11",
    "@graphql-tools/schema": "^7.1.3",
    "@types/death": "^1.1.1",
    "@types/pg": "^7.14.11",
    "apollo-server": "^2.22.1",
    "apollo-server-express": "^2.22.1",
    "death": "^1.1.0",
    "dotenv": "^8.2.0",
    "graphql": "^15.5.0",
    "graphql-scalars": "^1.9.0",
    "pg": "^8.5.1"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^2.0.2",
    "@graphql-codegen/cli": "1.21.3",
    "@graphql-codegen/typescript": "1.21.1",
    "@graphql-codegen/typescript-resolvers": "1.19.0",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "copyfiles": "^2.4.1",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-promise": "^4.3.1",
    "husky": "^5.2.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  }
}
