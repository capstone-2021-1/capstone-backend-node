{
  "name": "capstone-backend",
  "version": "1.0.0",
  "description": "capstone-backend",
  "main": "dist/index.js",
  "repository": "https://github.com/capstone-2021-1/capstone-backend.git",
  "author": "sindy",
  "license": "GPL-3.0-only",
  "private": false,
  "engines": {
    "node": ">=14.16.0"
  },
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "rm -rf dist && tsc && copyfiles --up 1 src/graphql/**/*.{graphql,sql} dist/",
    "start": "node dist/index.js",
    "format": "prettier . --write --ignore-path .gitignore",
    "lint": "eslint . --fix --ignore-path .gitignore",
    "type": "tsc --pretty --noEmit",
    "pre-push": "yarn format && yarn lint && yarn type",
    "generate": "graphql-codegen --config codegen.yml",
    "prepare": "husky install"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^7.12.0",
    "@graphql-tools/load-files": "^6.3.2",
    "@graphql-tools/merge": "^6.2.12",
    "@graphql-tools/schema": "^7.1.3",
    "@types/bcryptjs": "^2.4.2",
    "@types/death": "^1.1.1",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/node": "^14.14.40",
    "@types/pg": "^7.14.11",
    "apollo-server": "^2.23.0",
    "apollo-server-express": "^2.23.0",
    "bcryptjs": "^2.4.3",
    "copyfiles": "^2.4.1",
    "death": "^1.1.0",
    "dotenv": "^8.2.0",
    "graphql": "^15.5.0",
    "graphql-scalars": "^1.9.0",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.6.0",
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^2.0.2",
    "@graphql-codegen/cli": "1.21.3",
    "@graphql-codegen/typescript": "1.21.1",
    "@graphql-codegen/typescript-resolvers": "1.19.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "^6.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1"
  }
}
